include LICENSE
include README.md
include pyproject.toml
include MANIFEST.in

# Documentation
recursive-include docs *.md
recursive-include docs/examples *.yaml

# Exclude development files
exclude .env*
exclude .devcontainer
exclude .github
exclude .trunk
exclude Dockerfile
exclude tests
exclude scratchpad-wip

# Exclude cache directories
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
